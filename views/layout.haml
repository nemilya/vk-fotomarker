!!!
%html
  %head
    %title VK FotoMarker
    %link{  :href => "/assets/css/bootstrap.css", :rel => "stylesheet", :type => "text/css" }

    - js_libs = %w(jquery haml sammy sammy.haml sketch coffee-script)
    - js_libs.each do |lib|
      %script{ :src => "/assets/js/#{lib}.js", :type => "text/javascript" }
    %script{ :src => "/app/app.coffee", :type => "text/coffeescript" }

    - if VK_JS
      %script{ :src => "http://vk.com/js/api/xd_connection.js?2", :type => "text/javascript" }

  %body

  .navbar.navbar-inverse.navbar-fixed-top
    .navbar-inner
      .container-fluid
        %a.btn.btn-navbar
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        %a.brand{:href => "/"} FotoMarker
        .nav-collapse.collapse
          %ul.nav
            %li
              %a{:href => "/#"} Home
            %li
              %a{:href => "#/select_url"} Url
            %li
              - if session[:token]
                %a{:href=> "/logout" } Выйти
              - else
                %a{:href=> "/auth/vkontakte" } Войти

    .container-fluid
      %p
        = yield